<head>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
</head>
<div class="tech-btm">
    <p>Teknoloji, yazılım ve diğer bloglar.. </p>
    <form id="subForm">
        <input type="email" data-secim="mailSubmit" placeholder="Email" required="" name="Mail">
        <input type="submit" id="btn" name="submit" value="ABONE OL"><br />
        <div id="sonuc"></div><br />
    </form>
</div>
<script type="text/javascript">
    
    $(function () {
        $("#btn").click(function (e) {
            var bolum = document.createElement("div");
            bolum.className = "alert alert-success";
            bolum.innerHTML = "Kayıt Başarılı";
            document.body.appendChild(bolum);
            e.preventDefault();
            var veri = $("#subForm").serialize();
            $.ajax({
                type: "post",
                url:"/NewsLetter/SubscribeMail/",
                data: veri,
                success: function (f) {
                    $("#sonuc").html(bolum);
                    setTimeout(() => { window.location.reload() }, 3000);
                }
            });
        });
    });
</script>